[Unit]
Description=Swiss Cottage AI FastAPI Server
After=network.target

[Service]
Type=simple
User=ilsa
Group=ilsa
WorkingDirectory=/home/ilsa/swiss-cottage-ai-assit
Environment="PATH=/home/ilsa/.local/bin:/usr/local/bin:/usr/bin:/bin"
EnvironmentFile=/home/ilsa/swiss-cottage-ai-assit/.env
ExecStart=/usr/bin/python3 -m uvicorn chatbot.api.main:app --host 0.0.0.0 --port 8000
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
